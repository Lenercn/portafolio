<section id="contact" class="section">
	<div class="container">
		<h2>Get in Touch</h2>
		<div class="contact-content">
			<form class="contact-form">
				<div class="form-group">
					<label for="name">Nombre:</label>
					<input type="text" id="name" name="name" required>
				</div>
				<div class="form-group">
					<label for="email">Email:</label>
					<input type="email" id="email" name="email" required>
				</div>
				<div class="form-group">
					<label for="message">Message:</label>
					<textarea id="message" name="message" required></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Send Message</button>
			</form>
			
			<div class="contact-info">
				<h3>Información de contacto</h3>
				<p><i class="fas fa-map-marker-alt"></i> Cajamarca, Perú</p>
				<div class="social-links">
				
					<a href="https://github.com/lenercn" target="_blank"><i class="fab fa-github"></i></a>
					<a href="https://www.linkedin.com/in/Lenercn" target="_blank"><i class="fab fa-linkedin"></i></a>
					<a href="https://wa.me/+51976411784?text=Hola! Vengo de  revisar tu portafolio." target="_blank"><i class="fab fa-whatsapp"></i></a>
				</div>
				
			</div> 
		</div>
	</div>
</section>

<style>
	.contact-content {
		display: flex;
		gap: 2rem;
	}
	.contact-form {
		flex: 1;
	}
	.contact-info {
		flex: 1;
	}
	.form-group {
		margin-bottom: 1rem;
	}
	label {
		display: block;
		margin-bottom: 0.5rem;
	}
	input, textarea {
		width: 100%;
		padding: 0.5rem;
		border: 1px solid #ccc;
		border-radius: 4px;
		font-family: inherit;
	}
	textarea {
		height: 150px;
	}
	.contact-info h3 {
		margin-bottom: 1rem;
	}
	.contact-info p {
		margin-bottom: 0.5rem;
	}
	.contact-info i {
		margin-right: 0.5rem;
		color: var(--primary-color);
	}
	.social-links {
		margin-top: 1rem;
	}
	.social-links a {
		display: inline-block;
		margin-right: 1rem;
		font-size: 1.5rem;
		color: var(--text-color);
		transition: color 0.3s ease;
	}
	.social-links a:hover {
		color: var(--primary-color);
	}
	@media (max-width: 768px) {
		.contact-content {
			flex-direction: column;
		}
	}
</style>